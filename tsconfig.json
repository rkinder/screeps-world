{
    "compilerOptions": {
         "module": "esnext",
         "lib": ["es2019"],
         "target": "es2019",
         "moduleResolution": "node",
         "outDir": "dist",
         "baseUrl": "scripts/",
         "strict": true,
         "noImplicitAny": true,
         "removeComments": true,
         "noImplicitReturns": true,
         "allowSyntheticDefaultImports": true,
         "allowUnreachableCode": true,
         "strictNullChecks": false,
         "esModuleInterop": true
    },
    "exclude": ["node_modules"]
}